{
  "name": "seoul-kimchi-website",
  "version": "1.0.0",
  "description": "Website giới thiệu và bán hàng cho thương hiệu Seoul Kimchi - Kim chi Hàn Quốc truyền thống từ 1968.",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "serve": "npx http-server -c-1 -p 3000",
    "build": "npm run build:css && npx @11ty/eleventy",
    "build:css": "tailwindcss -i ./src/input.css -o ./css/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./css/styles.css --watch",
    "test": "echo \"No tests configured\" && exit 0"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "jsdom": "^20.0.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "autoprefixer": "^10.4.21",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  }
}